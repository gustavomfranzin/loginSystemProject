<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3"
      crossorigin="anonymous"
    />
    <link rel="stylesheet" href="/style.css" />
    <title>Login System Project</title>
  </head>
  <body>
    <nav>
      <h2>loginSystemProject</h2>
      <h4>Node - Typescript - MySQL</h4>
      <ul>
        <li><a href="/">Home</a></li>
        <li><a href="/login">Login</a></li>
        <li><a href="/Register">Register</a></li>
      </ul>
    </nav>

    <div class="container mt-4">
      <div class="card-header">
            Register to somewhere!
            {{#if message}}
                <h4 class="alert alert-danger mt-3">{{message}}</h4>
            {{/if }}
            {{#if message2}}
                <h4 class="alert alert-success mt-3">{{message2}}</h4>    
            {{/if}}
        </div>
      <form action="/auth/login" method="POST">
  <div class="mb-3">
    <label for="login" class="form-label">Login address</label>
    <input type="login" class="form-control" id="login" aria-describedby="login" name="login">
    <div id="login" class="form-text">We'll never share your login with anyone else.</div>
  </div>
  <div class="mb-3">
    <label for="Password" class="form-label">Password</label>
    <input type="password" class="form-control" id="Password" name="password">
  </div>
  <div class="mb-3 form-check">
    <input type="checkbox" class="form-check-input" id="exampleCheck1">
    <label class="form-check-label" for="exampleCheck1">Remember</label>
  </div>
  <button type="submit" class="btn btn-primary">Enter to the new world</button>
</form>

    </div>

    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p"
      crossorigin="anonymous"
    ></script>
  </body>
</html>